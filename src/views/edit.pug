extends base

block content 
    h5 Update video
        form(method="POST")
            input(name="title", placeholder="Title", required, value=video.title, type="text", maxlength=80)
            input(name="description", placeholder="Description", required, value=video.description, type="text", minlength=20)
            input(name="hashtags", placeholder="Hashtags, separated by comma.", required, value=video.hashtags.join(), type="text")
            input(value="Save", type="submit")